<div>
    <form method="post" action="/profile" enctype="multipart/form-data">

        <div class="container">
            <div class="card-body text-center shadow">
                {{#if user.avatarUrl}}
                    <img class="rounded-circle mb-3 mt-4"
                         width="160"
                         height="160" src="/{{user.avatarUrl}}"
                         alt="avatar-{{user.name}}"/>
                {{else}}
                    <img class="rounded-circle mb-3 mt-4"
                         width="160"
                         height="160"
                         src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/480px-No_image_available.svg.png"
                         alt="avatar"/>
                {{/if}}

                <div class="mb-3">
                    <label class="label-file" for="file">Выберите файл</label>
                    <input type="file" name="avatar" class="file" id="file">
                </div>
            </div>


            <div class="card shadow mb-3">


                <div class="" align="center">
                    {{#if error}}
                        <div class="alert alert-danger" role="alert">
                            {{error}}
                        </div>
                    {{/if}}
                </div>
                <div class="card-body" id="profile">
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group"><label for="username"><strong>Имя</strong></label>
                                <input class="form-control" autofocus required minlength="3" maxlength="50" id="name" value="{{user.name}}" type="text" name="name"/>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group"><label for="email"><strong>Email</strong></label>
                                <input
                                        class="form-control" type="email" placeholder="{{user.email}}" disabled
                                        name="email"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-dark btn-sm" type="submit">Сохранить изменения</button>
                    </div>

                    <input type="hidden" name="_csrf" value="{{csrf}}">
                </div>
            </div>
        </div>
    </form>
</div>